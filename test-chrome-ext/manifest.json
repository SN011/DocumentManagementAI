{
  "manifest_version": 2,
  "name": "Google Sign-In Extension",
  "version": "2.0",
  "permissions": [
    "storage",
    "identity",
    "tabs",
    "http://localhost/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "icon48.png"
  },
  "browser_action": {
    "default_icon": {
      "48": "icon48.png"
    }
  },
  "oauth2": {
    "client_id": "291175256673-6m7bkorhc88r3uv3hdum2mfdaoc9jorp.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile",
      "https://www.googleapis.com/auth/drive",
      "https://www.googleapis.com/auth/calendar",
      "https://www.googleapis.com/auth/contacts.readonly"
    ]
  }
}
