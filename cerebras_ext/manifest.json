
{
    "manifest_version": 2,
    "name": "Marvin the Orb",
    "version": "1.0",
    "permissions": [
        "storage",
        "tabs",
        "http://localhost/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons": {
        "48": "icon48.png"
    },
    "browser_action": {
        "default_icon": {
            "48": "icon48.png"
        }
    }
}